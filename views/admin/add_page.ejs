<!DOCTYPE html>
<html ng-app="myApp">

<head>
  <title>Form Validation Example</title>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.9/angular.min.js"></script>
  <style>
    .error {
      color: red;
    }
  </style>
</head>

<body>
  <div ng-controller="MyFormController">
    <h1>Add Page</h1>

    <form name="myForm" ng-submit="submitForm()" novalidate
    method="post" action="/admin/pages/add-page">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" ng-model="page.title" placeholder="Title" required>
        <div ng-messages="myForm.title.$error" ng-show="myForm.title.$dirty && myForm.title.$invalid">
          <div ng-message="required" class="error">Title is required.</div>
        </div>
      </div>

      <div class="form-group">
        <label for="slug">Slug</label>
        <input type="text" class="form-control" name="slug" ng-model="page.slug" placeholder="Slug" required>
        <div ng-messages="myForm.slug.$error" ng-show="myForm.slug.$dirty && myForm.slug.$invalid">
          <div ng-message="required" class="error">Slug is required.</div>
        </div>
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        <textarea name="content" class="form-control" cols="30" rows="10" ng-model="page.content" placeholder="Content" required></textarea>
        <div ng-messages="myForm.content.$error" ng-show="myForm.content.$dirty && myForm.content.$invalid">
          <div ng-message="required" class="error">Content is required.</div>
        </div>
      </div>

      <button class="btn btn-default" ng-disabled="myForm.$invalid">Submit</button>
    </form>
  </div>

  <script>
    var app = angular.module('myApp', []);

    app.controller('MyFormController', function($scope) {
      $scope.page = {};

      $scope.submitForm = function() {
        if ($scope.myForm.$valid) {
          // Form is valid, perform the necessary actions
          console.log('Form submitted successfully!');
        }
      };
    });
  </script>
</body>

</html>

